# vim: syntax=nginx ts=4 sw=4 sts=4 sr noet

server {
  listen 80;

  server_name wrapt.greenriver.com wrapt.com wrapt.us www.wrapt.us;

  return 301 http://$host$request_uri;
}

server {
    listen 80;
    server_name www.wrapt.com;
    root /var/www/wrapt-gratitude/current/public;
    passenger_enabled on;

    location /cable {
        passenger_app_group_name wrapt_production_action_cable;
        passenger_force_max_concurrent_requests_per_process 0;
    }
}

