.row.admin__intro
  .col-sm-12
    %h1 Products

.row.admin__actions
  .col-sm-12
    = link_to 'Add a Product', new_product_path, class: 'btn btn-primary'

.row
  .col-sm-12
    = form_for @product_search, url: products_path, html: {method: 'GET', class: 'form-inline', data: {behavior: 'form-loads-subcategories'}} do |form|
      .form-group
        = form.search_field :keyword, placeholder: 'Title or SKU', class: 'form-control', style: 'min-width: 300px;'
        = form.collection_select :product_category_id, ProductCategory.categories, :id, :name, {prompt: 'Category'}, class: 'form-control', data: {behavior: 'product-category-input'}
        = form.collection_select :product_subcategory_id, ProductCategory.subcategories.where(parent_id: @product_search.product_category_id), :id, :name, {prompt: 'Sub-category'}, class: 'form-control', data: {behavior: 'product-subcategory-input'}
        %button.btn.btn-primary
          %i.glyphicon.glyphicon-search
          Search
        = link_to 'Show All', products_path, class: 'btn btn-default'

.row
  .col-sm-12
    %table.table.index-table
      %thead
        %tr
          %th
          %th Title
          %th Categories
          %th Wrapt SKU
          %th.text-right Wrapt Cost
          %th.text-right Vendor Retail Price
          %th.text-right Units Available
          %th


      %tbody
        - @products.preload(:primary_product_image).each do |product|
          %tr
            %td.admin-index-table--image-cell
              - if product.primary_product_image.present?
                = image_tag product.primary_product_image.image_url(:small), class: 'admin-index-table--image'
            %td= product.title
            %td
              - if product.product_category.present?
                %span.label.label-default= product.product_category&.name
              - if product.product_subcategory.present?
                %span.label.label-default= product.product_subcategory&.name
            %td.admin-index-table--sku-cell= product.wrapt_sku
            %td.text-right= number_to_currency product.wrapt_cost
            %td.text-right= number_to_currency product.vendor_retail_price
            %td.text-right= number_with_delimiter product.units_available
            %td.admin-index-table--buttons-cell
              = link_to 'View', product, class: 'btn btn-default btn-xs'
              = link_to 'Edit', edit_product_path(product), class: 'btn btn-default btn-xs'
              = link_to 'Delete', product_path(product, context_params), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger btn-xs'

    %p=paginate @products

:javascript
  new App.Admin.ProductSubcategoryLoader({prompt: 'Sub-category'})


