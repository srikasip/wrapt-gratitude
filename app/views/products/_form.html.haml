= simple_form_for(@product) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :description
    
    = f.input :image, as: :file
    = f.hidden_field :image_cache
    = image_tag @product.image_url(:small) if @product.image?
    = f.input :remove_image, as: :boolean

    
    .row
      .col-xs-2
        = f.input :price
    = f.input :public

    %h3 Categories
    = f.association :product_categories, as: :check_boxes, collection: ProductCategory.all_for_product_form, label_method: :name_for_product_form

  .form-actions
    = f.button :submit, class: 'btn btn-primary'
