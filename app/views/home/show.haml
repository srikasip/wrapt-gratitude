.home__hero
  = render 'hero_text_1'
.container.home__hero-text-secondary
  = render 'hero_text_2'
  .container
    .row
      .hero-overrun.col-sm-10.col-sm-offset-1
        = render 'shared/start_quiz'

- content_for :after_wrapper do
  = render 'home/how_wrapt_works'
  = render 'home/wrapt_stories', stories: :home_page_stories

- if params[:password_reset_token]
  - content_for :page_js do
    :javascript
      new App.PjaxModalLoader(#{password_reset_path(params[:password_reset_token]).to_json})
