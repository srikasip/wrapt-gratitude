.home__hero
  = render 'hero_text_1'
.container.home__hero-text-secondary
  = render 'hero_text_2'
  .container
    .row
      .hero-overrun.col-sm-10.col-sm-offset-1
        - if require_invites? && current_user.blank?
          = render "shared/invitation_request"
        - else
          = simple_form_for @question_response, url: giftees_path, html: {data: {behavior: 'question-response-form'}, class: 'sqr-form'} do |form|
            - if current_user&.admin?
              = hidden_field_tag :survey_id, @survey.id
            = render response_fields_partial, form: form, label: @question_response.survey_question.prompt

- content_for :after_wrapper do
  = render 'home/how_wrapt_works'
  = render 'home/wrapt_stories', stories: :home_page_stories

- if params[:password_reset_token]
  - content_for :page_js do
    :javascript
      new App.PjaxModalLoader(#{password_reset_path(params[:password_reset_token]).to_json})
