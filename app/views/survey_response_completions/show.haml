.container
  .row
    .col-xs-12
      .pa3.text-center
        %h1 Great Job! Now we have all the information we need to make gift recommendations for #{@survey_response.giftee_name}.
        

      = simple_form_for @survey_response_completion, url: with_invitation_scope(profile_survey_completion_path(@profile, @survey_response)) do |form|
        
        .pa4
          - unless current_user.active?
            %h4 Create Your Account
            .row
              .col-xs-6
                = form.input :user_first_name, label: 'First Name'
              .col-xs-6
                = form.input :user_last_name, label: 'Last Name'
            .row
              .col-xs-6
                = form.input :user_email, label: 'Email Address'
              .col-xs-6
                = form.input :user_password, label: 'Password', value: ''

          = form.submit 'View Gift Recommendations'.upcase, class: 'btn btn-primary btn-sm btn-full-width'


= content_for :page_js do
  :javascript
    new App.PasswordRevealer() 


