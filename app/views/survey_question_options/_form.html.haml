= simple_form_for @survey_question_option, url: url do |f|
  = f.error_notification

  .form-inputs
    = f.input :text

    = f.input :image, as: :file
    = f.hidden_field :image_cache
    = image_tag @survey_question_option.image_url(:small) if @survey_question_option.image?
    = f.input :remove_image, as: :boolean if @survey_question_option.image?


  .form-actions
    = f.button :submit