.container
  .row
    .col-xs-12
      %nav.navbar.navbar-default.navbar-static-top
        .navbar-header
          .navbar-brand.wrapt-logo{class: ("active" if active_top_nav_section == 'home_pages')}= link_to "Wrapt", root_path
        
        %ul.nav.navbar-nav.navbar-right
          - if current_user && current_user.active?
            - if current_user&.admin?
              %li
                = link_to admin_root_path do
                  =embedded_svg('icon-circle', class: "icon navbar-static-top--icon-circle")
                  Admin
            %li
              = link_to my_account_path do
                =embedded_svg('icon-circle', class: "icon navbar-static-top--icon-circle")
                My Account
          %li
            = link_to '#' do
              =embedded_svg('icon-circle', class: "icon navbar-static-top--icon-circle")
              Science of Gifting
          - if current_user
            %li
              = link_to user_session_path, method: :delete do
                =embedded_svg('icon-circle', class: "icon navbar-static-top--icon-circle")
                Sign Out
          - else
            %li
              = link_to new_user_session_path, data: {loads_in_pjax_modal: true} do
                =embedded_svg('icon-circle', class: "icon navbar-static-top--icon-circle")
                Sign In
            
