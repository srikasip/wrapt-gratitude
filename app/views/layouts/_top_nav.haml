.container
  .row
    .col-xs-12
      %nav.navbar.navbar-default.navbar-static-top
        .navbar-header
          .navbar-brand.wrapt-logo{class: ("active" if active_top_nav_section == 'home_pages')}= link_to "Wrapt", root_path
        
        %ul.nav.navbar-nav.navbar-right
          - if current_user
            %li= link_to "My Account", my_account_path
          - if current_user&.admin?
            %li= link_to "Admin", admin_root_path
          - if current_user
            %li= link_to "Sign Out", user_session_path, method: :delete
          - else
            %li= link_to 'Sign In', new_user_session_path, data: {loads_in_pjax_modal: true}
