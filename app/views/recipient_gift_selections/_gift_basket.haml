.gift-basket-overlay{data: {behavior: 'gift-basket-overlay'}}

.gift-basket{data: {behavior: 'gift-basket-container', profile_id: profile.recipient_access_token, channel_name: 'RecipientGiftSelectionsChannel'}}
  .gift-basket__inner-wrap
    = link_to "< Back to Shopping", '#', data: {behavior: 'close-gift-basket'}, class: 'gift-basket__header small'   
    .gift-basket__main
      %div{data: {behavior: 'gift-basket-gifts'}}
        = render 'recipient_gift_selections/index', profile: profile

    .gift-basket__footer
      %h4.gift-basket__footer__heading
        Thank You!
        %span.pull-right &#8212;
      %p.help.gift-basket__footer__text 
        In our beta testing phase we are not fulfilling gift selections but we will be soon. Share our site with friend & family&#8212;the more users we have on Wrapt
        %sup.trademark
          &#8482;
        the better the gifting gets.
      

      = link_to 'SHARE IT NOW', new_profile_recipient_originated_referral_path(profile.recipient_access_token), class: 'btn btn-primary btn-full-width btn-gift-basket-submit', data: {loads_in_pjax_modal: true, behavior: 'gift-basket-submit'}

      %p.help.gift-basket__footer__text.text-center You will be able to preview the email before you send it.

- content_for :page_js do
  :javascript
    new App.GiftBasket()
