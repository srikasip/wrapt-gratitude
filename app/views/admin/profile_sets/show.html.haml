.row
  .col-sm-12
    %h1
      = @profile_set.name
      = link_to 'Edit Title', edit_admin_profile_set_path(@profile_set), class: 'btn btn-default btn-xs'

    %p
      %b Quiz:
      = @profile_set&.survey.title

    %h3 Quiz Responses
    %p
      = link_to 'Add a New Survey Response', new_admin_profile_set_survey_response_path(@profile_set), class: 'btn btn-primary'
      = link_to 'Import Responses', new_admin_profile_set_import_path(@profile_set), class: 'btn btn-primary'

    %table.table
      - @profile_set_survey_responses.each do |response|
        %tr
          %td= response.name
          %td
            = link_to 'Edit', edit_admin_profile_set_survey_response_path(@profile_set, response), class: 'btn btn-xs btn-default'
            = link_to 'Delete', admin_profile_set_survey_response_path(@profile_set, response), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-xs btn-danger'
