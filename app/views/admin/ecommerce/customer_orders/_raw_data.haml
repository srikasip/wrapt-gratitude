- order.purchase_orders.each do |po|
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %span.glyphicon.glyphicon-plus
        %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapseShipment#{po.id}"}
          Shipment for #{po.order_number}
    .panel-collapse.collapse{id: "collapseShipment#{po.id}"}
      .panel-body
        %pre= po.shipment.ai(plain: true)
        %pre= po.shipping_label.ai(plain: true)
