.panel.panel-default
  .panel-heading
    %h4.panel-title
      %span.glyphicon.glyphicon-plus
      %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapseOrder"}
        Order
  #collapseOrder.panel-collapse.collapse
    .panel-body
      %pre= order.ai(plain: true)

