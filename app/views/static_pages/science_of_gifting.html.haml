.container
  .row
    .col-xs-12.text-center
      %h1.about-page__header.fancy
        The Science of Gifting
      %p.about-page__tagline= content_with_citation(@tagline[:content], @tagline[:citations])
  .sg-boxes__container
    .row.sg-boxes__header
      .col-xs-12
        %h2.about-page__header Why is it so hard to get the right gift?
    .sg-boxes
      - @boxes.each do |box|
        .sg-box
          .sg-box__content
            .sg-box__ill{id: box[:id]}
            %h5= box[:title]
            %p= content_with_citation(box[:content], box[:citations])
  - @content.each do |c|
    .row
      .col-xs-12.col-md-10.col-md-offset-1
        = c[:container] == 'sg-quote' ? content_quote(c) : content_section(c)
  .row
    .col-xs-12
      .sg-references
        - @references.each_with_index do |r, index|
          - num = index+1
          .sg-reference{id: "citation-0#{num}"}
            %span.sg-reference__num= "#{num}. "
            = link_to r[:text], r[:link], class: 'hidden-xs hidden-sm', target: '_blank'
            = link_to r[:short_text], r[:link], class: 'hidden-md hidden-lg', target: '_blank'

= render 'start_quiz'


